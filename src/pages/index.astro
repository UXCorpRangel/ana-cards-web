---
import CardsCategory from '@sections/home/CardsCategory.astro';
import Contributors from '@sections/home/Contributors.astro';
import Hero from '@sections/home/Hero.astro';
import Information from '@sections/home/Information.astro';
import ConstructionDialog from '@components/ConstructionDialog.astro';
import ScrollToTop from '@components/ScrollToTop.astro';
import PageLayout from '@layouts/Page.astro';
---

<PageLayout title="Inicio">
  <main class="content">
    <Hero />
    <Information />
    <CardsCategory />
    <Contributors />
  </main>

  <ConstructionDialog />
  <ScrollToTop />
</PageLayout>

<style>
  .content {
    display: flex;
    flex-direction: column;
    gap: 7rem;
    max-width: 1080px;
    margin-inline: auto;
    padding-block: 3rem 6rem;

    @media (768px <= width <= 1199.98px) {
      max-width: 600px;
    }
  }
</style>
